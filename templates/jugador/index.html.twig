{% extends 'base.html.twig' %}

{% block title %}Jugador index
{% endblock %}

{% block body %}
	<h1>Jugador index</h1>
	<a href="{{ path('jugador_new') }}" style="background-color:white;">Create new</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Foto</th>
				<th>Fecha_Nac</th>
				<th>Nacionalidad</th>
				<th>Dorsal</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for jugador in jugadors %}
				<tr>
					<td>{{ jugador.id }}</td>
					<td>{{ jugador.Nombre }}</td>
					<td><img src="{{ asset('imgs/Jugadores/'~jugador.Foto) }}" width="50px" height="50px"></td>
					<td>{{ jugador.FechaNac ? jugador.FechaNac|date('Y-m-d') : '' }}</td>
					<td>{{ jugador.Nacionalidad }}</td>
					<td>{{ jugador.Dorsal }}</td>
					<td>
						<a href="{{ path('jugador_show', {'id': jugador.id}) }}">show</a>
						<a href="{{ path('jugador_edit', {'id': jugador.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('jugador_new') }}">Create new</a>
{% endblock %}
